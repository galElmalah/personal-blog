---
interface Props {
  id: string;
  user?: string;
  height?: number;
  tab?: "html" | "css" | "js" | "result";
  theme?: string;
}

const {
  id,
  user = "gal8914",
  height = 500,
  tab = "result",
  theme = "dark",
} = Astro.props;
---

<div class="codepen-embed my-8">
  <p
    class="codepen"
    data-height={height}
    data-theme-id={theme}
    data-default-tab={tab}
    data-slug-hash={id}
    data-user={user}
  >
    <span>
      See the Pen <a href={`https://codepen.io/${user}/pen/${id}`}>{id}</a>
      by {user} (<a href={`https://codepen.io/${user}`}>@{user}</a>) on
      <a href="https://codepen.io">CodePen</a>.
    </span>
  </p>
</div>

<script async src="https://cpwebassets.codepen.io/assets/embed/ei.js"></script>
