---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{
  filteredHeadings.length > 0 && (
    <nav class="mb-8 p-4 bg-gray-50 rounded-lg border border-gray-200">
      <details open>
        <summary class="text-lg font-semibold cursor-pointer select-none">
          Table of Contents
        </summary>
        <ul class="mt-3 space-y-1 list-none pl-0">
          {filteredHeadings.map((heading) => (
            <li class:list={[heading.depth === 3 && "ml-4"]}>
              <a
                href={`#${heading.slug}`}
                class="text-gray-600 hover:text-accent transition-colors text-sm"
              >
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </details>
    </nav>
  )
}
