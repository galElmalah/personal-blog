---
interface Props {
  content: string;
}

const { content } = Astro.props;

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/galelmalah",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>`,
  },
  {
    name: "Dev.to",
    url: "https://dev.to/galelmalah",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M7.42 10.05c-.18-.16-.46-.23-.84-.23H6v4.36h.58c.37 0 .65-.08.83-.23.18-.16.27-.45.27-.88v-2.15c0-.42-.09-.7-.27-.87z"></path><path d="M2 3v18h20V3H2zm7.3 10.45c-.32.52-.84.78-1.56.78h-2v-6h2c.72 0 1.24.26 1.56.78.32.52.48 1.15.48 1.89v1.66c0 .73-.16 1.37-.48 1.89zm4.37.78h-1.51v-6h1.51v6zm4.06-3.72c0 .98-.31 1.75-.93 2.31-.62.56-1.46.84-2.52.84h-.36v-6h.36c1.06 0 1.9.28 2.52.84.62.56.93 1.33.93 2.31v-.3z"></path></svg>`,
  },
  {
    name: "Twitter",
    url: "https://twitter.com/galelmalah",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>`,
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/gal-elmalah-71874115a/",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>`,
  },
  {
    name: "RSS",
    url: "/rss.xml",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 11a9 9 0 0 1 9 9"></path><path d="M4 4a16 16 0 0 1 16 16"></path><circle cx="5" cy="19" r="1"></circle></svg>`,
  },
];
---

<article class="first-entry">
  <!-- Toolbar -->
  <div
    class="h-4 bg-black rounded-t-md relative flex items-center pl-2.5 gap-1.5"
  >
    <span class="w-2 h-2 rounded-full bg-toolbar-open"></span>
    <span class="w-2 h-2 rounded-full bg-toolbar-close"></span>
  </div>

  <!-- Terminal -->
  <div class="terminal w-full rounded-b-md p-4 overflow-y-auto text-white">
    <div>
      <span class="prompt text-green-400">/home$</span>
      <span class="cmd supported first"></span>
    </div>
    <div class="whoami-output">
      <Fragment set:html={content} />
    </div>
    <span class="prompt second text-green-400">/home$</span>
    <span class="cmd supported second"></span>
    <div class="find-output">
      You can find me on the following platforms
      <div class="flex flex-wrap gap-4 mt-3">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 text-accent hover:underline"
            >
              <Fragment set:html={link.svg} />
              <span>{link.name}</span>
            </a>
          ))
        }
      </div>
    </div>
    <span class="prompt final text-green-400">/home$</span>
    <span class="cmd third"></span>
  </div>
</article>

<style>
  .first-entry {
    box-shadow:
      rgba(50, 50, 93, 0.25) 0px 6px 12px -2px,
      rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
    border-radius: 0.375rem;
    overflow: hidden;
  }
</style>
