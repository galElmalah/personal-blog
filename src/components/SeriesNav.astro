---
interface Post {
  slug: string;
  data: {
    title: string;
    date: Date;
  };
}

interface Props {
  seriesName: string;
  posts: Post[];
  currentSlug: string;
}

const { seriesName, posts, currentSlug } = Astro.props;

// Find current post index
const currentIndex = posts.findIndex((p) => currentSlug.includes(p.slug));
const totalPosts = posts.length;
---

<div class="my-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
  <p class="text-sm text-gray-600">
    This post is number <strong>{currentIndex + 1}</strong> of {totalPosts} posts
    in the series{" "}
    <a
      href={`/series/${seriesName.toLowerCase().replace(/\s+/g, "-")}`}
      class="text-accent font-semibold hover:underline"
    >
      {seriesName}
    </a>.
  </p>

  <details class="mt-3">
    <summary
      class="text-sm font-medium cursor-pointer select-none text-gray-700"
    >
      View all posts in series
    </summary>
    <ol class="mt-2 space-y-1 list-decimal list-inside text-sm">
      {
        posts.map((post, index) => (
          <li
            class:list={[index === currentIndex && "font-semibold text-accent"]}
          >
            {index === currentIndex ? (
              <span>{post.data.title}</span>
            ) : (
              <a
                href={`/posts/${post.slug}`}
                class="text-gray-600 hover:text-accent transition-colors"
              >
                {post.data.title}
              </a>
            )}
          </li>
        ))
      }
    </ol>
  </details>
</div>
