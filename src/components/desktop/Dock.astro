---
/**
 * Dock.astro - macOS-style dock component
 * Provides quick navigation and actions from the desktop
 * Phase 4: Dock & Interactions
 */
---

<div class="dock-container">
  <div class="dock">
    <button
      class="dock-icon"
      data-action="home"
      aria-label="Home - Return to desktop root"
      title="Home"
    >
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        <polyline points="9 22 9 12 15 12 15 22"></polyline>
      </svg>
      <span class="dock-icon-label">Home</span>
    </button>

    <button
      class="dock-icon"
      data-action="posts"
      aria-label="Posts - View all posts"
      title="Posts"
    >
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
        <line x1="16" y1="13" x2="8" y2="13"></line>
        <line x1="16" y1="17" x2="8" y2="17"></line>
        <polyline points="10 9 9 9 8 9"></polyline>
      </svg>
      <span class="dock-icon-label">Posts</span>
    </button>

    <button
      class="dock-icon"
      data-action="series"
      aria-label="Series - View all series"
      title="Series"
    >
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
      </svg>
      <span class="dock-icon-label">Series</span>
    </button>

    <div class="dock-separator"></div>

    <button
      class="dock-icon"
      data-action="terminal"
      aria-label="Terminal - Switch to terminal view"
      title="Terminal"
    >
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="3" width="20" height="18" rx="2" ry="2"></rect>
        <line x1="7" y1="9" x2="11" y2="13"></line>
        <line x1="7" y1="13" x2="11" y2="9"></line>
        <line x1="13" y1="13" x2="17" y2="13"></line>
      </svg>
      <span class="dock-icon-label">Terminal</span>
    </button>
  </div>
</div>

<style>
  .dock-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    padding: 1rem;
    pointer-events: none;
    z-index: 1000;
  }

  .dock {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 1rem;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 0 0 0.5px rgba(255, 255, 255, 0.1),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
    pointer-events: auto;
  }

  .dock-icon {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: transparent;
    border: none;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
    color: var(--term-fg);
    padding: 0;
  }

  .dock-icon svg {
    width: 32px;
    height: 32px;
    transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .dock-icon-label {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    background: rgba(0, 0, 0, 0.9);
    color: var(--term-fg);
    padding: 0.25rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-family: 'Fira Code', monospace;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    z-index: 10;
  }

  .dock-icon:hover {
    transform: scale(1.2) translateY(-8px);
    background: rgba(255, 255, 255, 0.05);
  }

  .dock-icon:hover .dock-icon-label {
    opacity: 1;
  }

  .dock-icon:active {
    transform: scale(1.1) translateY(-6px);
  }

  .dock-icon:focus-visible {
    outline: 2px solid var(--term-cyan);
    outline-offset: 4px;
  }

  /* Active indicator (dot below icon) */
  .dock-icon[data-active="true"]::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    background: var(--term-cyan);
    border-radius: 50%;
    opacity: 0.8;
  }

  .dock-separator {
    width: 1px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0 0.25rem;
  }

  /* Hide on mobile */
  @media (max-width: 1023px) {
    .dock-container {
      display: none;
    }
  }

  /* Accessibility: Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .dock-icon {
      transition: none;
    }

    .dock-icon:hover {
      transform: none;
      background: rgba(255, 255, 255, 0.1);
    }

    .dock-icon:active {
      transform: none;
    }
  }
</style>

<script>
  function setupDock() {
    const dockIcons = document.querySelectorAll('.dock-icon');

    dockIcons.forEach((icon) => {
      icon.addEventListener('click', () => {
        const action = icon.getAttribute('data-action');

        switch (action) {
          case 'home':
            // Dispatch event to navigate to desktop root
            document.dispatchEvent(new CustomEvent('dock:navigate-home'));
            break;

          case 'posts':
            // Navigate to posts view (same as home for now)
            document.dispatchEvent(new CustomEvent('dock:navigate-home'));
            break;

          case 'series':
            // Navigate to series view (show only folders)
            document.dispatchEvent(new CustomEvent('dock:navigate-home'));
            break;

          case 'terminal':
            // Switch to terminal view
            document.dispatchEvent(new CustomEvent('view:toggle-to-terminal'));
            break;
        }
      });
    });

    // Update active state based on current path
    function updateActiveState() {
      // This will be implemented when we wire up navigation
      // For now, mark home as active if we're at root
    }

    updateActiveState();
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupDock);
  } else {
    setupDock();
  }

  // Re-initialize on Astro page loads
  document.addEventListener('astro:page-load', setupDock);
</script>
